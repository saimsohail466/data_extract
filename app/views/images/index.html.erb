<div class="container-fluid w-100 m-4 p-5">
  <div class="card">
    <div class="card-header">
      <h4> Images </h4>
    </div>

    <div class="card-body d-flex justify-content-center align-items-start flex-wrap">
      <% @images.each do |image| %>
        <div class="card m-2" style="max-width: 10rem;">
          <%= image_tag(image.image) %>

          <div class="card-body">
            <p class="text-muted mt-1"><%= image.created_at.strftime("%d %b, %y") %></p>
            <a href="#" class="btn btn-primary">View</a>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
